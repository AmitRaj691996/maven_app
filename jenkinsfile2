pipeline{
    agent any
    environment{
        RELEASE_VERSION='1.1.0'
        INT_VERSION = 'R2'

    }
    parameters{
        booleanParam(name: 'RELEASE', defaultValue: false, description: 'Is this a release candidate ?')
    }
    stages{
        stage('Audit Stage'){
            steps{
                auditStage()
            }
        }
        stage('unit test'){
            steps{
                dir('./single-module'){
                    test()
                }
            }
        }
        stage('build'){
            environment{
                SUFFIX = getBuildNumber()
            }
            steps{
                dir('./single-module'){
                    mvn versions:set -DnewVersion=SUFFIX
                    mvn versions:update-child-modules
                    mvn clean package 
                }

            }    

        }
    }
}

void auditStage(){
    sh '''
    git --version 
    java --version
    mvn --version
    '''
}
void test() {
    sh '''
    ls
    mvn validate test
    '''
}

String getBuildNumber(){
    if(env.RELEASE==true){
        return RELEASE:$BUILD_NUMBER
    }
    else 
        return INT_VERSION:$BUILD_NUMBER

}
