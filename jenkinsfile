pipeline{
    agent any
    environment{
        VERSION = '2.1.0'
        RELEASE_VERSION = 'R.2'
    }
    stages{
        stage('Audit tools'){
            steps{
                sh '''
                  ls
                  git --version
                  java --version
                  mvn --version
                  '''
            }
        }
        stage('Unit Test'){
            steps{
                dir('./single-module'){
                sh '''
                ls
                mvn validate 
                mvn compile
                mvn test
                '''
                }
            }
        }
        stage('Build'){
            steps{
                echo "Building version ${VERSION} with suffix: ${RELEASE_VERSION}"
                dir('./single-module'){
                    sh '''
                    mvn versions:set -DnewVersion="${VERSION}"-SNAPSHOT
                    mvn versions:update-child-modules
                    mvn clean package
                    '''
                }
            }
        }
    }
}
